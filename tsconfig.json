{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "module": "commonjs",
    "target": "es5",
    "outDir": "./dist",
    "noImplicitAny": true,
    "declaration": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "paths": {
      "@/components": ["./src/components/index.ts"],
      "@/components/*": ["./src/components/*"],
      "@/system": ["./src/system/index.ts"],
      "@/system/*": ["./src/system/*"]
    }
  },
  "exclude": [
    "node_modules",
    "example",
    "dist",
    "**/*.spec.ts"
  ]
}
